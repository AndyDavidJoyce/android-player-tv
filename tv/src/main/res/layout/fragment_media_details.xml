<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/container"
>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:weightSum="9"
	>
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:id="@+id/left_panel"
			android:layout_weight="4"
			android:gravity="center"
			android:background="@android:color/black"
			android:orientation="vertical"
			android:padding="32dp"
		>
			<!-- Left side content -->

			<!-- First row with title and live indicator -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
			>
				<ImageView
					android:layout_width="16dp"
					android:layout_height="16dp"
					android:id="@+id/live_indicator"
					android:layout_marginEnd="16dp"
				/>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/title"
					style="@style/Widget.Leanback.DetailsDescriptionTitleStyle"
					android:includeFontPadding="false"
					android:gravity="center_vertical|start"
					android:maxLines="4"
					tools:text="LIVE: Fresh from Lush Kitchen"
				/>
			</LinearLayout>

			<!-- Second row with live times -->
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/start_end_time"
				android:layout_marginTop="16dp"
				style="@style/Widget.Leanback.DetailsDescriptionSubtitleStyle"
				android:textColor="@color/text_dark"
				android:textSize="13sp"
				android:text="09:00am - 10:00am GMT"
			/>

			<!-- Watch Live Button -->
			<com.cube.lush.player.view.LushButton
				android:layout_width="wrap_content"
				android:layout_height="@dimen/lb_action_2_lines_height"
				android:id="@+id/play_button"
				android:layout_gravity="start"
				android:layout_marginBottom="32dp"
				android:layout_marginTop="32dp"
				style="@style/AppDetailsActionButtonStyle"
				android:text="Watch Live"
				android:drawablePadding="24dp"
				android:drawableStart="@drawable/ic_play_circle_filled_black_36dp"
				android:paddingStart="32dp"
				android:paddingEnd="48dp"
			/>

			<!-- Description -->
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/description"
				style="@style/Widget.Leanback.DetailsDescriptionBodyStyle"
				android:textSize="13sp"
				android:textColor="@color/text_light"
				android:lineSpacingMultiplier="1.5"
				tools:text="A visit to the Lush Kitchen to experience an hour in the life of our team in action. Includes product demos and a sneak peak at this weeks menu!"
			/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/time_remaining"
				android:layout_marginTop="32dp"
				style="@style/Widget.Leanback.DetailsDescriptionSubtitleStyle"
				android:textColor="@color/text_dark"
				android:textSize="13sp"
				android:text="39 minutes remaining"
			/>
		</LinearLayout>

		<FrameLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="5"
			android:background="@android:color/transparent"
		>

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/background_image"
				android:scaleType="centerCrop"
			/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@android:color/transparent"
				android:orientation="horizontal"
			>
				<LinearLayout
					android:layout_width="1000dp"
					android:layout_height="match_parent"
					android:id="@+id/right_panel"
					android:background="@android:color/black"
					android:orientation="horizontal"
				/>

				<ImageView
					android:layout_width="512dp"
					android:layout_height="match_parent"
					android:src="@drawable/faded_background"
					android:scaleType="fitXY"
				/>
			</LinearLayout>
		</FrameLayout>
	</LinearLayout>
</FrameLayout>
