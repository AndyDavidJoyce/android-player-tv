<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppTheme" parent="@style/Theme.Leanback">
        <item name="imageCardViewStyle">@style/AppImageCardViewStyle</item>
        <item name="imageCardViewTitleStyle">@style/AppImageCardViewTitleStyle</item>
        <item name="imageCardViewContentStyle">@style/AppImageCardViewContentStyle</item>
        <item name="imageCardViewInfoAreaStyle">@style/AppImageCardViewInfoAreaStyle</item>
        <item name="detailsActionButtonStyle">@style/AppDetailsActionButtonStyle</item>
	</style>

	<style name="AppImageCardViewStyle" parent="Widget.Leanback.ImageCardViewStyle">
        <item name="cardBackground">@color/primary</item>
        <item name="infoAreaBackground">@color/primary</item>
        <item name="lbImageCardViewType">Title|Content</item>
   </style>

    <style name="AppImageCardViewInfoAreaStyle" parent="Widget.Leanback.ImageCardView.InfoAreaStyle">
        <item name="android:paddingStart">2dp</item>
    </style>

    <style name="AppImageCardViewTitleStyle" parent="Widget.Leanback.ImageCardView.TitleStyle">
    	<item name="android:textStyle">bold|italic</item>
		<item name="android:layout_marginTop">@dimen/lb_basic_card_info_text_margin</item>
		<item name="android:layout_marginBottom">@dimen/lb_basic_card_info_text_margin</item>
    </style>

    <style name="AppImageCardViewContentStyle" parent="Widget.Leanback.ImageCardView.ContentStyle">
    	<item name="android:textColor">@color/text_dark</item>
    	<item name="android:textSize">10sp</item>
    </style>

    <style name="AppDetailsActionButtonStyle" parent="Widget.Leanback.DetailsActionButtonStyle">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/primary</item>
    </style>
</resources>
