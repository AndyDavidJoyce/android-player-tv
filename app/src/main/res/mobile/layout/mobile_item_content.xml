<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="320dp"
	android:orientation="vertical"
>
	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="16dp"
		app:elevation="2dp"
	>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@android:color/black"
		>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/info_section"
				android:orientation="vertical"
				android:layout_alignParentBottom="true"
				android:background="@color/grey"
				android:paddingBottom="2dp"
				android:paddingTop="2dp"
			>
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/type"
					android:ellipsize="end"
					android:maxLines="1"
					android:paddingBottom="4dp"
					android:paddingLeft="16dp"
					android:paddingRight="16dp"
					android:paddingTop="16dp"
					android:text="Radio"
					android:textAllCaps="true"
					android:textColor="@color/text_dark"
					android:textSize="12sp"
				/>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/title"
					android:ellipsize="end"
					android:lineSpacingExtra="6dp"
					android:maxLines="2"
					android:paddingBottom="4dp"
					android:paddingLeft="16dp"
					android:paddingRight="16dp"
					android:paddingTop="4dp"
					android:text="Investigating Dogfighting | Investigator contracted to do something"
					android:textSize="18sp"
					android:textStyle="bold"
					style="@style/Text.White.HelveticaBold"
				/>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/length"
					android:ellipsize="end"
					android:maxLines="1"
					android:paddingBottom="16dp"
					android:paddingLeft="16dp"
					android:paddingRight="16dp"
					android:paddingTop="4dp"
					android:text="5 days ago"
					android:textColor="@color/text_dark"
					android:textSize="12sp"
				/>
			</LinearLayout>

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/image"
				android:layout_above="@id/info_section"
				tools:src="@drawable/channel_lush_kitchen"
			/>
		</RelativeLayout>
	</android.support.v7.widget.CardView>
</LinearLayout>